<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/login.css">
    <script src="https://kit.fontawesome.com/efb24555f3.js" crossorigin="anonymous"></script>
    <title>SIGNUP/LOGIN</title>
</head>
<body>
    <div class="form-box">
        <h1 id="title">Sign Up</h1>
        <form id="form1">
            <div class="input-group">

                <div class="input-field" id="nameField">
                    <i class="fa-solid fa-user"></i>
                    <input id="fullname" type="text" placeholder="Full Name">
                </div>

                <div class="input-field">
                    <i class="fa-solid fa-envelope"></i>
                    <input id="email" type="email" placeholder="Email" required>
                </div>


                <div class="input-field">
                    <i class="fa-solid fa-lock"></i>
                    <input id="password" type="password" placeholder="Password" required>
                </div>

                <div class="signupSignin">
                    <p id="log1"> Already a User? <a href="#" id="signIn">Sign In</a></p>
                    <p id="log2" class="disable"> Need an Account? <a href="#" id="signUp">Sign Up</a></p>
                </div>
                
            </div>
            

            <div class="btn">
                <button onclick="registerUser()" type="submit" id="signUpBtn">Sign Up</button>
                <button onclick="loginUser()" type="submit" id="signInBtn" class="disabled">Sign In</button>
                <!-- <button type="button" id="signupBtn">Sign Up</button> -->
                <!-- <button type="button" id="signInBtn" class="disable">Sign In</button> -->
            </div>
        </form>
        <span id="status"> </span>
    </div>
    
</body>
<script src="registrationpage.js"></script>
</html>